extends layout

block mainContent

  section#intro
    img(src="/images/intro.jpg")

  section#p1
    div#ori-plot(style="background-position:-#{emptyPlot.x}px -#{emptyPlot.y}px;")
    canvas#colors_sketch(data-plot-id="#{emptyPlot._id}",data-plot-x="#{emptyPlot.x}",data-plot-y="#{emptyPlot.y}",width="300",height="100")
    div.tools
      a(href="#colors_sketch",data-tool="marker")= "Pen"
      a(href="#colors_sketch",data-tool="eraser")= "Eraser"
      a#btn-done-sketch.next(href="#colors_sketch")= "Done"

  section#p2
    h1= "Hi"
    br
    input.name(type="text")
    br
    br
    br
    a(href="#p2")= "next"

  section#thanks
    h1= "Thanks"
    a#draw-another(href="#p1")= "draw another"


block jsLibs
  script(src='/javascripts/vstrokes.js')
  